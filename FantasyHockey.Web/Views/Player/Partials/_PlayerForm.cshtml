@using FantasyHockey.Web.HtmlHelpers
@model FantasyHockey.Web.Models.PlayerViewModel

<div class="container">
    <div class="row">
        @Html.HiddenFor(model => model.PlayerId)
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.FirstName)
            @Html.TextBoxFor(model => model.FirstName, new {@class = "form-control"})
            <div>
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.LastName)
            @Html.TextBoxFor(model => model.LastName, new {@class = "form-control"})
            <div>
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Position)
            @Html.PositionDropDownListFor(model => model.Position, new {@class = "form-control"})
            <div>
                @Html.ValidationMessageFor(model => model.Position)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.TeamId)
            @Html.DropDownListFor(model => model.TeamId, new SelectList(Model.Teams, "TeamId", "Name"), "-----", new { @class = "form-control" } )
            <div>
                @Html.ValidationMessageFor(model => model.TeamId)
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Status)
            @Html.StatusDropDownListFor(model => model.Status, new { @class = "form-control" } )
            <div>
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Salary)
            @Html.TextBoxFor(model => model.Salary, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(model => model.Salary)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.GamesPlayed)
            @Html.TextBoxFor(model => model.GamesPlayed, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(model => model.GamesPlayed)
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Goals)
            @Html.TextBoxFor(model => model.Goals, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(model => model.Goals)
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Assists)
            @Html.TextBoxFor(model => model.Assists, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(model => model.Assists)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.Wins)
            @Html.TextBoxFor(model => model.Wins, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(model => model.Wins)
            </div>
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.Losses)
            @Html.TextBoxFor(model => model.Losses, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(model => model.Losses)
            </div>
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.GoalsAgainstAverage)
            @Html.TextBoxFor(model => model.GoalsAgainstAverage, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(model => model.GoalsAgainstAverage)
            </div>
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.SavePercentage)
            @Html.TextBoxFor(model => model.SavePercentage, new { @class = "form-control" })
            <div>
                @Html.ValidationMessageFor(model => model.SavePercentage)
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="margin-top-20">
            <button type="submit" name="submit" value="submit" class="btn btn-large btn-success col-md-2">Submit</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-large btn-danger col-md-2 button-settings" })
            <button type="submit" name="submit" value="delete" class="btn btn-large btn-warning col-md-2 pull-right margin-right-30">Delete</button>
        </div>
    </div>
    <div class="row">
        @Html.ValidationSummary(true)
    </div>
</div>